body
  background-color $col-gal-grey !important
  margin-bottom 2rem
  overflow-x hidden

.Table
  margin 5rem

.no-data
  padding-top 50px

.lnk--ic
  display inline-flex !important
  align-items center
  text-decoration none
  svg
    margin-left: 0.25rem

td[title="True"]
  color $col-accent

.pull-right
  align-right()


.ant-dropdown-menu-title-content
  a
    text-decoration none


.txt-sm-light
  font-size 12px !important
  font-family Avenir

.txt-muted-light
  color #929292 !important

.txt-muted-on-dark
  color #d0d0d0

.txt-lnk
  color $col-lnk-blue
  cursor pointer
  &:hover
    color $col-hover-blue