.c-table
  color $col-trout

  &__title
    font-size 2rem
    font-weight 700

  &__btns
    +md-max()
      width 90%
      button
        flex-shrink 0
        width 100%
        max-width 100%
        padding-right calc(var(--bs-gutter-x) * .5)
        padding-left calc(var(--bs-gutter-x) * .5)
        margin-top var(--bs-gutter-y)
        margin-left 0

  &--data
    margin-top 2rem
    .c-table__wrap
      background-color white
      border-radius 8px

  &--header
    width 95%
    margin-left auto
    margin-right auto
    +md-max()
      position static
      text-align center

  &--main
    position relative
    bottom 2rem
    z-index 0
    width 95%
    margin-left auto
    margin-right auto
    margin-top 1rem
    margin-bottom 1.5rem
    +md-max()
      margin-top 2rem
      margin-bottom 2rem

  &--pDatasets
    .revision-number
      padding 2px 10px
      border-radius 3px
